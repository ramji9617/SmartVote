<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
         xmlns:app="http://schemas.android.com/apk/res-auto"
         xmlns:tools="http://schemas.android.com/tools">

    <data>

       <variable
           name="name"
           type="String" />

        <variable
        name="constituency"
        type="String" />
        <variable
            name="age"
            type="String" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/main"
        tools:ignore="SpUsage"
        android:orientation="vertical"
        android:background="@android:color/background_light"
        tools:context=".VerifyActivity">


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"
            tools:ignore="UseCompoundDrawables">
            <ImageView
                android:id="@+id/backIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="this is a backicon"
                android:src="@drawable/ic_backicon"
                android:layout_marginStart="10dp"
                tools:ignore="HardcodedText" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:text="@string/election_commission_of_india"
            android:textColor="@color/black"
            android:layout_gravity="top"
            android:paddingEnd="33dp"
            android:paddingStart="0dp"
            android:textSize="19dp"
            android:textStyle="bold" />
        </LinearLayout>

            <TextView
                android:id="@+id/voteTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Vote Ends :"
                android:gravity="center"
                android:textSize="15dp"
                android:layout_marginBottom="20dp"
                tools:ignore="TextSizeCheck" />


        <TableLayout
            android:id="@+id/tableLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="20dp"
            android:layout_weight="1">


            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Constituency"
                    android:textColor="@color/black"
                    android:textSize="17dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/constituencyTxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@{constituency}"
                    android:textColor="@color/black"
                    android:textSize="16dp" />
            </TableRow>


            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Age"
                    android:textColor="@color/black"
                    android:textSize="17dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/ageTxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@{age}"
                    android:textColor="@color/black"
                    android:textSize="16dp" />

            </TableRow>

        </TableLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_marginVertical="20dp"
            android:layout_marginHorizontal="50dp"
            android:elevation="5dp"
            app:cardCornerRadius="20dp">

            <ImageView
                android:id="@+id/chooseImg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="choose image"
                android:scaleType="centerInside"
                android:background="@color/light_grey"
                android:src="@drawable/ic_add_photo"
                tools:ignore="HardcodedText" />

        </androidx.cardview.widget.CardView>
    <!-- Button aligned to the bottom of the parent LinearLayout -->

        <TextView
            android:id="@+id/nameTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{name}"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"
            android:textSize="19dp"
            android:textStyle="bold" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="20dp"
            android:gravity="bottom"
            android:layout_weight="1"
            android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnNext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:textAllCaps="false"
            android:layout_marginHorizontal="40dp"
            android:background="@drawable/button_background"
            android:gravity="center"
            android:text="Verify"
            android:textSize="20dp" />
        </LinearLayout>
    </LinearLayout>


</layout>