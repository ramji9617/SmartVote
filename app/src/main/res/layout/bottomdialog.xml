<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:ignore="SpUsage"
    android:elevation="20dp"
    android:paddingHorizontal="10dp"
    android:background="@drawable/bottombackground"
    android:layout_height="match_parent">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal">

       <TextView
           android:layout_width="wrap_content"
           android:layout_height="match_parent"
           android:textColor="@color/black"
           android:layout_gravity="center"
           android:textSize="25dp"
           android:gravity="center"
           android:layout_marginStart="60dp"
           android:layout_marginEnd="0dp"
           android:layout_weight="1"
           android:text="@string/confirmation"
           android:textStyle="bold" />

       <ImageButton
           android:id="@+id/btnCencel"
           android:layout_width="60dp"
           android:layout_height="wrap_content"
           android:backgroundTint="@android:color/transparent"
           android:src="@drawable/ic_cencel"
           tools:ignore="SpeakableTextPresentCheck" />

   </LinearLayout>

    <ImageView
        android:id="@+id/partyLogo"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:src="@drawable/bjp" />

    <TextView
        android:id="@+id/CandidateName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:textAlignment="center"
        android:text="Arvindra pateria"
        android:textColor="@color/dark_grey"/>

    <TextView
        android:id="@+id/partyName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="You choose "
        android:textAlignment="center"
        android:textSize="14dp"
        tools:ignore="TextSizeCheck" />

    <com.example.swipebutton_library.SwipeButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:id="@+id/btnConfirm"
        app:button_background_tint="@color/green"
        app:has_finish_animation="true"
        app:inner_text="Slide to Confirm"
        app:inner_text_color="@color/white"
        app:inner_text_size="18dp"
        app:has_active_status="false"
        android:layout_marginBottom="5dp"
        app:outer_background_tint="@color/grey"
        app:trail_background_tint="@color/green"
        app:trail_enabled="true"

        />


</LinearLayout>